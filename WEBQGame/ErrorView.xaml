<Window x:Class="WEBQGame.ErrorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка загрузки сцены" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="370*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBox Name="ErrorLog" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="0" />
        <Button Name="CloseError" Content="Закрыть" Height="23" Width="150" Click="CloseErrorWindow"  Grid.Row="1"/>
    </Grid>
</Window>
